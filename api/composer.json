{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "doctrine/dbal": "^2.7",
        "fideloper/proxy": "~3.3",
        "google/apiclient": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "intervention/image": "dev-master",
        "laravel/framework": "5.5.*",
        "laravel/socialite": "~2.0",
        "laravel/tinker": "~1.0",
        "league/flysystem-aws-s3-v3": "~1.0",
        "paypal/rest-api-sdk-php": "*",
        "pusher/pusher-php-server": "^4.0",
        "stripe/stripe-php": "^6.22",
        "tymon/jwt-auth": "0.5.*"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Increment\\Common\\Comment\\": "packages/increment/common/comment/src/",
            "Increment\\Common\\Rating\\": "packages/increment/common/rating/src/",
            "Increment\\Common\\Image\\": "packages/increment/common/image/src/",
            "Increment\\Common\\Tutorial\\": "packages/increment/common/tutorial/src/",
            "Increment\\Marketplace\\": "packages/increment/marketplace/src/",
            "Increment\\Messenger\\": "packages/increment/messenger/src/",
            "Increment\\Plan\\": "packages/increment/plan/src/",
            "Increment\\Payment\\": "packages/increment/payment/src/",
            "Increment\\Account\\": "packages/increment/account/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
